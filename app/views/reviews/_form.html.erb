
<%= form_for([@place, @review]) do |f| %>
<p>
	<%= f.label :comment %>
	<%= f.text_field :comment, size:100 %>
</p>
<p>
	<%= f.label :price %>
	<%= f.number_field :price %>
</p>
<p>
	 <%= f.label :meal_size %>         
  <% Review::MEAL_SIZE.each do |m| %>
    <span>
      <%= f.radio_button :meal_size, m %> <%= m %>
    </span>
  <% end %>

<%= f.submit 'Post Review' %>
<%= link_to "Cancel", place_reviews_path(@place) %>
	<% end %>