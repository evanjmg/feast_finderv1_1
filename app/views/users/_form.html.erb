<%= form_for(@user) do |f| %>

	<%= render 'shared/errors', object: @user %>

	<p>
		
		<%= f.label :name %>

		<%= f.text_field :name %>

	</p>
	<p> 
		<%= f.label :email %><br/>

		<%= f.text_field :email %>

	</p>
	<p>
		<%= f.label :password %></br>

		<%= f.password_field :password %>

	</p>
	<p>
		<%= f.label :password_confirmation %></br>
		<%= f.password_field :password_confirmation %>
	</p>
	<p>
		<% if @user.new_record? %>
		<%= f.submit %>
		<% else %>
		<%= f.submit "Update Account" %>
		<% end %>
	<% end %>
</p>
	<p>
<%= link_to "Back to Restaurants","/places" %>
</p>